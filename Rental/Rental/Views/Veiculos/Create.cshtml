                <label asp-for="NumCamas" class="control-label"></label>
                <input asp-for="NumCamas" class="form-control" />
                <span asp-validation-for="NumCamas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdadeMinima" class="control-label"></label>
                <input asp-for="IdadeMinima" class="form-control" />
                <span asp-validation-for="IdadeMinima" class="text-danger"></span>
            </div>
                        <div class="form-group">
                <label asp-for="Licenca" class="control-label"></label>
                <input asp-for="Licenca" class="form-control" />
                <span asp-validation-for="Licenca" class="text-danger"></span>
            </div>

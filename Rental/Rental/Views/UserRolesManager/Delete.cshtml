@model IEnumerable<Rental.ViewModels.UserRolesViewModel>
@{
    ViewData["Title"] = "User Roles";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<br />
<h1>@ViewData["Title"]</h1>
@if(Model != null)
{
<table class="table table-striped table-hover table-bordered mt-4 overflow-scroll">
    <thead>
        <tr>
            <th>Avatar</th>
            <th>UserId</th>
            <th>Primeiro Nome</th>
            <th>Ultimo Nome</th>
            <th>Username</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.Avatar == null)
                    {
                        <img class="img-thumbnail" style="height:75px;width:auto" id="MyAvatar" src="~/images/null.jpg" />
                    }
                    else
                    {
                        <img class="img-thumbnail" style="height:75px;width:auto" src="data:image/*;base64,@(Convert.ToBase64String(item.Avatar))" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrimeiroNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UltimoNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    <b>@Html.DisplayFor(modelItem => item.Roles)</b>
                </td>
                <td>
                    <a class="bg-primary text-white" asp-action="Details" asp-route-id="@item.UserId"> Editar Roles </a>
                </td>
                <td>
                    <a asp-action="delete" asp-asp-controller="UserRolesManager" asp-route-id="@item.UserId" onclick="return confirm('Tem a certeza que deseja eliminar este utilizador?')"> Eliminar </a>
                </td>

            </tr>
        }
    </tbody>
</table>
}
else
{
    <p class="alert alert-warning  mb-3 mt-3 ">
        Lista Vazia
    </p>
}
@model Rental.ViewModels.UserRolesViewModel
@{
    ViewData["Title"] = "Adicionar Utilizador";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<br />
<h1>@ViewData["Title"]</h1>
    <div class="row">
    <div class="col-md-4">
        <form asp-action="AdicionarUser" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles">
                    <option value="">Escolha um Role</option>
                </select>
                <label asp-for="RoleId"></label>
            </div>
            <div class="form-floating">
                <input type="email" asp-for="Email" class="form-control" aria-required="true" />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="PrimeiroNome" class="form-control" aria-required="true" />
                <label asp-for="PrimeiroNome"></label>
                <span asp-validation-for="PrimeiroNome" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="UltimoNome" class="form-control" aria-required="true" />
                <label asp-for="UltimoNome"></label>
                <span asp-validation-for="UltimoNome" class="text-danger"></span>
            </div>           
            <div class="form-floating">
                <input type="password" asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            @if (Context.User.IsInRole("Admin"))
            {
                 <div class="form-floating">
                    <select asp-for="EmpresaId" class="form-control" asp-items="ViewBag.EmpresaId">
                        <option value="">Escolha uma Empresa</option>
                    </select>
                    <label asp-for="EmpresaId"></label>
                </div>
            }
            <button type="submit" value="AdicionarUser" class="btn btn-primary">Adicionar</button>
        </form>  
    </div>
    </div>


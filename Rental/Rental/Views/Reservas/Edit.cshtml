@model Rental.Models.Reserva

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Editar</h1>

<h4>Reserva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ClienteId" />
            <input type="hidden" asp-for="VeiculoId" />
            <div class="form-group">
                <label asp-for="DataPedido" class="control-label"></label>
                <input readonly asp-for="DataPedido" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DataLevantamento" class="control-label"></label>
                <input readonly asp-for="DataLevantamento" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DataEntrega" class="control-label"></label>
                <input readonly asp-for="DataEntrega" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DuracaoEmHoras" class="control-label"></label>
                <input readonly asp-for="DuracaoEmHoras" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DuracaoEmMinutos" class="control-label"></label>
                <input readonly asp-for="DuracaoEmMinutos" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Custo" class="control-label"></label>
                <input readonly asp-for="Custo" class="form-control" />
            </div>
           @* <div class="form-group">
                <label asp-for="veiculo.Modelo" class="control-label"></label>
                <input readonly asp-for="veiculo.Marca" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="cliente.UserName" class="control-label"></label>
                <input readonly asp-for="cliente.UserName" class="form-control" />
            </div>*@  
            <div class="alert alert-danger mt-2">
                <p> Rejeitar Reserva</p>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Rejeitada" /> @Html.DisplayNameFor(model => model.Rejeitada)
                    </label>
                </div>
            </div>
            <div class="alert alert-success mt-2">
                <p> Confirmar Reserva</p>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Confirmado" /> @Html.DisplayNameFor(model => model.Confirmado)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index">Voltar para a Lista</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
